#!/usr/bin/env ruby
require 'pry'
require_relative '../config/environment'

puts "Welcome to my TicTacToe game!"
puts "What kind of game would you like to play?

def start
        \n0 - CPU v CPU
        \n1 - You v CPU
        \n2 - You v Opp"

  game_mode = gets.strip

  if game_mode == "1"
    puts "Do you want to go first? [y/n]"
    if gets.strip == "y"
      Game.new(Player::Human.new("X"), Players::Computer.new("O"), Board.new).play
    else Game.new(Players::Computer.new("X"), Players::Human.new("O"), Board.new).play
    end

  elsif game_mode == "0"
    Game.new(Players::Computer.new("X"), Players::Computer.new("O"), Board.new).play

  elsif game_mode == "2"
    Game.new(Players::Human.new("X"), Players::Human.new("O"), Board.new).play
  end

  puts "Would you like to play again? [y/n]"
end

start until gets.strip == "n"
